@model Pharmacy.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<h1 style="font-family: 'Lato', sans-serif">Cargar Nuevo Cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row" style="background-color: aquamarine;">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="surname" class="control-label"></label>
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="" id="imagen" style="max-width:50px" />
                <label asp-for="photo" class="control-label"></label>
                <input name="seleccionImg" id="seleccionImg" type="file" accept="image/jpg" />
                <span asp-validation-for="photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HealthcareSystemid" class="control-label"></label>
                <select asp-for="HealthcareSystemid" class="form-control" asp-items="ViewBag.HealthcareSystemid"></select>
            </div>
            <div class="form-group">
                <label asp-for="CustomerMedication" class="control-label"></label>
                <label asp-for="CustomerMedication" class="control-label"></label>
                <select name="selectedMedication" asp-for="CustomerMedication" class="form-control">
                    <option value="null">No seleccionar ningún elemento</option>
                    @foreach (var item in @ViewBag.Medications)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="CustomerMedication" class="text-danger" />
                <span asp-validation-for="CustomerMedication" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min .js"></script>
<script src="~/js//preview.js"></script>