@model Pharmacy.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<h1 style="font-family: 'Lato', sans-serif">Editar Cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row" style="background-color: aquamarine;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="surname" class="control-label"></label>
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="~/photos/@Model.photo" 
                     class="rounded-circle" 
                     height="80" with"40" 
                     asp-append-version="true"/>
                <input asp-for="photo" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HealthcareSystemid" class="control-label"></label>
                <select asp-for="HealthcareSystemid" class="form-control" asp-items="ViewBag.HealthcareSystemid"></select>
                <span asp-validation-for="HealthcareSystemid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
