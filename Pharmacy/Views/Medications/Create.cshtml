@model Pharmacy.Models.Medication

@{
    ViewData["Title"] = "Create";
}

<h1 style="font-family: 'Lato', sans-serif">Cargar Nuevo Medicamento</h1>

<div class="row">
    <div class="col-md-4">
        Importar datos desde archivo CSV:
        <form asp-action="Import" enctype="multipart/form-data">
            <div class="form-group">
                <input name="fileImports" id="fileImports" type="file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Import" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />

<h4>Medicamentos</h4>
<hr />
<div class="row" style="background-color: aquamarine;">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoryid" class="control-label"></label>
                <select asp-for="Categoryid" class="form-control" asp-items="ViewBag.Categoryid"></select>
            </div>
            <div class="form-group">
                <label asp-for="Labid" class="control-label"></label>
                <select asp-for="Labid" class="form-control" asp-items="ViewBag.Labid"></select>
            </div>
            <div class="form-group">
                <img src="" id="imagen" style="max-width:50px" />
                <label asp-for="photo" class="control-label"></label>
                <input name="seleccionImg" id="seleccionImg" type="file" accept="image/jpg" />
                <span asp-validation-for="photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="~/js//preview.js"></script>
